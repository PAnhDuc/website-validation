{
  "name": "website-validation",
  "version": "1.0.0",
  "scripts": {
    "lint": "eslint './**/*.{js,jsx,ts,tsx}' --format stylish || true",
    "test": "jest --passWithNoTests --coverage",
    "lint:js": "eslint '**/*.js'",
    "lint:css": "stylelint '**/*.css' --allow-empty-input",
    "lint:html": "htmlhint '**/*.html'",
    "validate": "npm run lint:js && npm run lint:css && npm run lint:html && npm test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "htmlhint": "^1.1.4",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "stylelint": "^16.13.2",
    "stylelint-config-standard": "^37.0.0"
  }
}
